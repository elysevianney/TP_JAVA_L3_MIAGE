package exo3e1;

public class Parallelepiped {
	
	public static void main (String[] args){
        airSurface(12, 3, 5);
        volume(12, 3, 5);
        
        airSurface(4, 34, 10);
        volume(4, 34, 10);
        
    }
	
	
	static void airSurface (float l, float la, float h) {
		
		System.out.println("L'air de la surface est : " + 2*(l*la + l*h + la*h));
	}
	
	static void volume (float l, float la, float h) {
		System.out.println("Le volume est : " +  l*la*h);
	}
}
